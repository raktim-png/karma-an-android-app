<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceProviderProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/service_provider_dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/service_provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2"
            android:layout_below="@+id/service_provider_dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/service_provider_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            android:background="@color/colorAccent2"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            app:drawableEndCompat="@drawable/ic_star_black_24dp" />

        <TextView
            android:id="@+id/service_provider_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_provider_dp"
            android:layout_margin="20dp"
            android:text="PRICE"
            android:textAlignment="center"
            android:textColor="@color/colorAccent2"
            android:textSize="18sp"
            android:textStyle="italic" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Locality"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/service_provider_locality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Locality"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Address"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/service_provider_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:text="Address"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="State"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/service_provider_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin code"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"/>

                <TextView
                    android:id="@+id/service_provider_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin code"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_below="@+id/service_provider_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btn_service_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button_orange"
                android:padding="20dp"
                android:text="BOOKED"
                android:textColor="@color/whiteTextColor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:clickable="false"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>